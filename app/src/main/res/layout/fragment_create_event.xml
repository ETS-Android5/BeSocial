<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.CreateEventFragment">


    <ImageView
        android:id="@+id/create_event_photo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="0.5"
        android:background="#28999595"
        android:contentDescription="add event photo"
        android:src="?attr/selectableItemBackground"
        tools:src="@android:drawable/ic_input_add" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:ems="10"
        android:hint="Enter a title..."
        android:inputType="textPersonName"
        android:textSize="17sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="0.5"
        android:background="#464C7E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="1">


        <EditText
            android:id="@+id/eventStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:hint="Starting on"
            android:inputType="date"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/eventEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:hint="Finish on"
            android:inputType="date"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="1">


        <EditText
            android:id="@+id/EventStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:hint="Starting time"
            android:inputType="time"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/EventEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:hint="Finishing time"
            android:inputType="time"
            android:textSize="17sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/eventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Write description..."
        android:inputType="textMultiLine"
        android:textSize="17sp" />

    <Button
        android:id="@+id/button2"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:backgroundTint="#1533DA"
        android:text="Create event" />

</LinearLayout>