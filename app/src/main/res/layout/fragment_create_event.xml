<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.CreateEventFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F7"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/create_event_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="clip_horizontal|center"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_add_a_photo_black_24dp"
            android:backgroundTint="#37D83D"
            android:contentDescription="add event photo"
            android:duplicateParentState="false"
            android:scaleType="centerCrop"
            tools:src="?attr/selectableItemBackground" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.5"
            android:background="@drawable/input_field"
            android:hint="Enter a title..."
            android:inputType="textPersonName"
            android:textColor="#050505"
            android:textSize="24sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="0.5"
            android:background="#464C7E" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_date_range_black_24dp" />

            <EditText
                android:id="@+id/eventStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/input_field"
                android:ems="5"
                android:hint="Starting on"
                android:inputType="date"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/eventEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/input_field"
                android:ems="5"
                android:hint="Finish on"
                android:inputType="date"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/create_event_time_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_access_time_black_24dp" />

            <EditText
                android:id="@+id/EventStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/input_field"
                android:ems="5"
                android:hint="Starting time"
                android:inputType="time"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/EventEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/input_field"
                android:ems="5"
                android:hint="Finishing time"
                android:inputType="time"
                android:textSize="17sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/event_location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/create_event_location_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="#FFFFFF"
                android:src="@drawable/ic_location_on_red_24dp" />

            <TextView
                android:id="@+id/create_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/create_event_location_ic"
                android:hint="Enter location"
                android:inputType="textMultiLine"
                android:textColor="#0A0A0A"
                android:textSize="18sp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/input_field"
            android:gravity="clip_vertical"
            android:hint="Write description..."
            android:inputType="textMultiLine"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button2"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:backgroundTint="#1533DA"
            android:text="Create event" />
    </LinearLayout>

</ScrollView>