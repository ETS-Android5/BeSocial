<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/event_node_shape"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/event_node_eventPhoto"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_node_eventDateAndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date at  time"
                android:textColor="#FCF30F0F"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/event_node_EventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#050505"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_node_eventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="locationTitle"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginTop="5dp"></View>
</LinearLayout>